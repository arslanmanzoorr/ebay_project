# Bidsquire.com Production Environment Configuration
# Copy this file to .env and update the values

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://bidsquire.com/api
NEXT_PUBLIC_APP_NAME=Bidsquire
NEXT_PUBLIC_APP_URL=https://bidsquire.com
NEXT_PUBLIC_ADMIN_URL=https://admin.bidsquire.com

# Database Configuration
POSTGRES_DB=bidsquire
POSTGRES_USER=bidsquire_user
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Admin User Configuration
ADMIN_EMAIL=admin@bidsquire.com
ADMIN_PASSWORD=Admin@bids25
ADMIN_NAME=Bidsquire Admin

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/bidsquire.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/bidsquire.com.key

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# External Services
N8N_WEBHOOK_URL=https://sorcer.app.n8n.cloud/webhook/789023dc-a9bf-459c-8789-d9d0c993d1cb
EXTERNAL_WEBHOOK_URL=your_external_webhook_url_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/bidsquire/app.log

# Performance
CACHE_TTL=3600
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
