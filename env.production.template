# ===========================================
# üöÄ Bidsquire Auction Platform - Production Environment
# ===========================================
# Copy this file to .env.production and update the values
# 
# Generate SECRET_KEY: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# 
# ===========================================

# üîê Security Settings
# ===========================================
DEBUG=False
SECRET_KEY=your_super_secret_key_here
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost,127.0.0.1

# üóÑÔ∏è Database Configuration
# ===========================================
POSTGRES_DB=auctionflow
POSTGRES_USER=auctionuser
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# üîÑ Redis Configuration (Caching & Sessions)
# ===========================================
REDIS_URL=redis://redis:6379

# üåê Frontend Configuration
# ===========================================
NEXT_PUBLIC_API_URL=https://yourdomain.com/api
NEXT_PUBLIC_DB_HOST=postgres
NEXT_PUBLIC_DB_PORT=5432
NEXT_PUBLIC_DB_NAME=auctionflow
NEXT_PUBLIC_DB_USER=auctionuser
NEXT_PUBLIC_DB_PASSWORD=your_secure_database_password_here

# üë§ Admin User Configuration (Auto-created on first startup)
# ===========================================
ADMIN_NAME=Your Company Admin
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=YourSecureAdminPassword123!

# üîó External Integrations
# ===========================================
# n8n Webhook URLs (update these with your actual n8n instance)
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/your-webhook-id

# üìß Email Configuration (Optional)
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# üîí SSL Configuration (Production)
# ===========================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# üìä Monitoring & Logging
# ===========================================
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-here

# üöÄ Performance Settings
# ===========================================
# Database connection pool settings
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=30

# Redis cache settings
CACHE_TTL=3600
SESSION_TIMEOUT=86400

# ===========================================
# üìù Quick Setup Instructions:
# ===========================================
# 1. Copy this file: cp env.production.template .env.production
# 2. Generate SECRET_KEY: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# 3. Update POSTGRES_PASSWORD with a strong password
# 4. Update ADMIN_EMAIL and ADMIN_PASSWORD
# 5. Update ALLOWED_HOSTS with your domain
# 6. Update NEXT_PUBLIC_API_URL with your domain
# 7. Run: ./deploy-easy.sh (Linux/Mac) or .\deploy-easy.ps1 (Windows)
# ===========================================